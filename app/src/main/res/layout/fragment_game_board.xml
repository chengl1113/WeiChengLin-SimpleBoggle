<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/instruction_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:text="Enter a word then hit submit."
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/firstButton"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="42dp"
        android:layout_marginTop="16dp"
        android:text="S"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:backgroundTint="@color/button_background_color"
        app:cornerRadius="8dp"
        app:iconGravity="textStart"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/instruction_text"
        app:strokeColor="@color/black"
        app:strokeWidth="2dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/secondButton"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="T"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:backgroundTint="@color/button_background_color"
        app:cornerRadius="8dp"
        app:iconGravity="textStart"
        app:layout_constraintStart_toEndOf="@+id/firstButton"
        app:layout_constraintTop_toBottomOf="@id/instruction_text"
        app:strokeColor="@color/black"
        app:strokeWidth="2dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/thirdButton"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="W"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:backgroundTint="@color/button_background_color"
        app:cornerRadius="8dp"
        app:iconGravity="textStart"
        app:layout_constraintStart_toEndOf="@id/secondButton"
        app:layout_constraintTop_toBottomOf="@id/instruction_text"
        app:strokeColor="@color/black"
        app:strokeWidth="2dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/fourthButton"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="G"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:backgroundTint="@color/button_background_color"
        app:cornerRadius="8dp"
        app:iconGravity="textStart"
        app:layout_constraintStart_toEndOf="@id/thirdButton"
        app:layout_constraintTop_toBottomOf="@id/instruction_text"
        app:strokeColor="@color/black"
        app:strokeWidth="2dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/fifthButton"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="42dp"
        android:layout_marginTop="8dp"
        android:text="E"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:backgroundTint="@color/button_background_color"
        app:cornerRadius="8dp"
        app:iconGravity="textStart"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/firstButton"
        app:strokeColor="@color/black"
        app:strokeWidth="2dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/sixthButton"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="I"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:backgroundTint="@color/button_background_color"
        app:cornerRadius="8dp"
        app:iconGravity="textStart"
        app:layout_constraintStart_toEndOf="@id/fifthButton"
        app:layout_constraintTop_toBottomOf="@id/secondButton"
        app:strokeColor="@color/black"
        app:strokeWidth="2dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/seventhButton"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="A"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:backgroundTint="@color/button_background_color"
        app:cornerRadius="8dp"
        app:iconGravity="textStart"
        app:layout_constraintStart_toEndOf="@id/sixthButton"
        app:layout_constraintTop_toBottomOf="@id/thirdButton"
        app:strokeColor="@color/black"
        app:strokeWidth="2dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/eighthButton"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="E"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:backgroundTint="@color/button_background_color"
        app:cornerRadius="8dp"
        app:iconGravity="textStart"
        app:layout_constraintStart_toEndOf="@id/seventhButton"
        app:layout_constraintTop_toBottomOf="@id/fourthButton"
        app:strokeColor="@color/black"
        app:strokeWidth="2dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/ninthButton"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="42dp"
        android:layout_marginTop="8dp"
        android:text="D"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:backgroundTint="@color/button_background_color"
        app:cornerRadius="8dp"
        app:iconGravity="textStart"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fifthButton"
        app:strokeColor="@color/black"
        app:strokeWidth="2dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/tenthButton"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="R"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:backgroundTint="@color/button_background_color"
        app:cornerRadius="8dp"
        app:iconGravity="textStart"
        app:layout_constraintStart_toEndOf="@id/ninthButton"
        app:layout_constraintTop_toBottomOf="@id/sixthButton"
        app:strokeColor="@color/black"
        app:strokeWidth="2dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/eleventhButton"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="L"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:backgroundTint="@color/button_background_color"
        app:cornerRadius="8dp"
        app:iconGravity="textStart"
        app:layout_constraintStart_toEndOf="@id/tenthButton"
        app:layout_constraintTop_toBottomOf="@id/seventhButton"
        app:strokeColor="@color/black"
        app:strokeWidth="2dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/twelfthButton"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="S"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:backgroundTint="@color/button_background_color"
        app:cornerRadius="8dp"
        app:iconGravity="textStart"
        app:layout_constraintStart_toEndOf="@id/eleventhButton"
        app:layout_constraintTop_toBottomOf="@id/eighthButton"
        app:strokeColor="@color/black"
        app:strokeWidth="2dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/thirteenthButton"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="42dp"
        android:layout_marginTop="8dp"
        android:text="S"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:backgroundTint="@color/button_background_color"
        app:cornerRadius="8dp"
        app:iconGravity="textStart"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ninthButton"
        app:strokeColor="@color/black"
        app:strokeWidth="2dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/fourteenthButton"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="E"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:backgroundTint="@color/button_background_color"
        app:cornerRadius="8dp"
        app:iconGravity="textStart"
        app:layout_constraintStart_toEndOf="@id/thirteenthButton"
        app:layout_constraintTop_toBottomOf="@id/tenthButton"
        app:strokeColor="@color/black"
        app:strokeWidth="2dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/fifteenthButton"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="P"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:backgroundTint="@color/button_background_color"
        app:cornerRadius="8dp"
        app:iconGravity="textStart"
        app:layout_constraintStart_toEndOf="@id/fourteenthButton"
        app:layout_constraintTop_toBottomOf="@id/eleventhButton"
        app:strokeColor="@color/black"
        app:strokeWidth="2dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/sixteenthButton"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="O"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:backgroundTint="@color/button_background_color"
        app:cornerRadius="8dp"
        app:iconGravity="textStart"
        app:layout_constraintStart_toEndOf="@id/fifteenthButton"
        app:layout_constraintTop_toBottomOf="@id/twelfthButton"
        app:strokeColor="@color/black"
        app:strokeWidth="2dp" />

    <TextView
        android:id="@+id/selected_word"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginTop="30dp"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@id/thirteenthButton"
        tools:layout_editor_absoluteX="176dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/clearButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="45dp"
        android:layout_marginTop="8dp"
        android:text="CLEAR"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:backgroundTint="@color/button_background_color"
        app:cornerRadius="8dp"
        app:iconGravity="textStart"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/selected_word"
        app:strokeColor="@color/black"
        app:strokeWidth="2dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/submitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="45dp"
        android:layout_marginTop="8dp"
        android:text="SUBMIT"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:backgroundTint="@color/button_background_color"
        app:cornerRadius="8dp"
        app:iconGravity="textStart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/selected_word"
        app:strokeColor="@color/black"
        app:strokeWidth="2dp" />
</androidx.constraintlayout.widget.ConstraintLayout>